<hosting:HostedApplication x:Class="R2000Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:R2000Wpf"
                           x:TypeArguments="local:App"

             xmlns:hosting="clr-namespace:R2000Wpf.Hosting">
    <hosting:HostedApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/Svgs/LoginBackground.xaml"/>
                <ResourceDictionary Source="/Assets/Svgs/LangIcon.xaml"/>
                <ResourceDictionary Source="/Styling/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </hosting:HostedApplication.Resources>
</hosting:HostedApplication>
