<UserControl x:Class="R2000Wpf.Controls.ExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R2000Wpf.Controls"
             xmlns:res="clr-namespace:R2000Wpf.Resources"
xmlns:controls="clr-namespace:R2000Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <controls:RBorder Background="#8699CB"
                      CornerRadius="5" BorderBrush="#203354" BorderThickness="2"
                      Padding="10">
        <StackPanel >
            <Button x:Name="CloseBtn" Content="X" Width="30" Height="30"
                    HorizontalAlignment="Left" FontSize="20"
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <TextBox x:Name="SearchBox" />
            <ListBox x:Name="FileList" Margin="5"
                    ItemsSource="{Binding Files}"
                    SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="4" 
                            MouseLeftButtonUp="Item_LeftClick"
                            MouseRightButtonUp="Item_RightClick">
                            <TextBlock Text="{Binding Name}"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </controls:RBorder>

</UserControl>
