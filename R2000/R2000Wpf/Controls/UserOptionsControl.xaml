<UserControl x:Class="R2000Wpf.Controls.UserOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R2000Wpf.Controls"
             mc:Ignorable="d" 
             xmlns:res="clr-namespace:R2000Wpf.Resources"
             xmlns:controls="clr-namespace:R2000Wpf.Controls"
             d:DesignHeight="450" d:DesignWidth="100">
    <controls:RBorder Background="#8699CB"
                      CornerRadius="5" BorderBrush="#203354" BorderThickness="2"
                      Padding="10">
        <StackPanel>
            <Button x:Name="CloseBtn" Content="X" Width="30" Height="30"
                    HorizontalAlignment="Left" FontSize="20"/>
            <Button x:Name="LogOutBtn" 
               Content="{Binding UserOptionsControlStrings.LogOut, Source={x:Static res:LocalizedStrings.Instance}}" />
            <Button x:Name="ChangeUserBtn" 
                Content="{Binding UserOptionsControlStrings.ChangeUser, Source={x:Static res:LocalizedStrings.Instance}}" />
            <Button x:Name="SettingsBtn" 
                Content="{Binding UserOptionsControlStrings.Settings, Source={x:Static res:LocalizedStrings.Instance}}" />
            <Button x:Name="ExplorerBtn" 
                Command="{Binding ToggleExplorerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>
    </controls:RBorder>
</UserControl>
