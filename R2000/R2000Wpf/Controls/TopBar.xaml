<UserControl x:Class="R2000Wpf.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R2000Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#EAEAF4" Name="NavigationGrid">
        <Button HorizontalAlignment="Right" Margin="0,0,10,0"
            Height="{Binding Path=ActualHeight, ElementName=NavigationGrid}" 
        Style="{StaticResource LangBtn}"
                Command="{Binding LangCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
