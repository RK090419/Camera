<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LoginBackground" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Canvas Background="#80BFF0">

                        <!-- Backmost blob -->
                        <Ellipse x:Name="Blob1" Width="80" Height="40" Fill="#40FFFFFF" Canvas.Left="50" Canvas.Top="80"/>
                        <Ellipse x:Name="Blob2" Width="120" Height="80" Fill="#30CCFFFF" Canvas.Left="500" Canvas.Top="150"/>
                        <Ellipse x:Name="Blob3" Width="50" Height="20" Fill="#20A3FF" Canvas.Left="100" Canvas.Top="25"/>
                        <Ellipse x:Name="Blob4" Width="70" Height="50" Fill="#25CCF0FF" Canvas.Left="150" Canvas.Top="40"/>

                        <Ellipse x:Name="Blob5" Width="80" Height="40" Fill="#40FFFFFF" Canvas.Right="50" Canvas.Bottom="80"/>
                        <Ellipse x:Name="Blob6" Width="120" Height="80" Fill="#30CCFFFF" Canvas.Right="500" Canvas.Bottom="150"/>
                        <Ellipse x:Name="Blob7" Width="50" Height="20" Fill="#20A3FF" Canvas.Right="100" Canvas.Bottom="25"/>
                        <Ellipse x:Name="Blob8" Width="70" Height="50" Fill="#25CCF0FF" Canvas.Right="150" Canvas.Bottom="40"/>
                        <!-- Stars -->
                        
                        <Polygon x:Name="Star1" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                             Fill="#A5D2EB" Opacity="0.5" Canvas.Left="10" Canvas.Top="50"/>
                        <Polygon x:Name="Star2" Points="0,-2 0.6,-0.6 2,0 0.6,0.6 0,2 -0.6,0.6 -2,0 -0.6,-0.6"
                             Fill="#D7ECE6" Opacity="0.7" Canvas.Left="50" Canvas.Top="120"/>
                        <Polygon x:Name="Star3" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                             Fill="White" Opacity="0.5" Canvas.Left="90" Canvas.Top="70"/>
                        <Polygon x:Name="Star4" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="#A5D2EB" Opacity="0.5" Canvas.Left="160" Canvas.Top="30"/>
                        <Polygon x:Name="Star5" Points="0,-2 0.6,-0.6 2,0 0.6,0.6 0,2 -0.6,0.6 -2,0 -0.6,-0.6"
                            Fill="#D7ECE6" Opacity="0.7" Canvas.Left="250" Canvas.Top="65"/>
                        <Polygon x:Name="Star6" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="White" Opacity="0.5" Canvas.Left="280" Canvas.Top="80"/>
                        
                        <Polygon x:Name="Star7" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="#A5D2EB" Opacity="0.5" Canvas.Right="10" Canvas.Bottom="50"/>
                        <Polygon x:Name="Star8" Points="0,-2 0.6,-0.6 2,0 0.6,0.6 0,2 -0.6,0.6 -2,0 -0.6,-0.6"
                            Fill="#D7ECE6" Opacity="0.7" Canvas.Right="50" Canvas.Bottom="120"/>
                        <Polygon x:Name="Star9" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="White" Opacity="0.5" Canvas.Right="90" Canvas.Bottom="70"/>
                        <Polygon x:Name="Star10" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="#A5D2EB" Opacity="0.5" Canvas.Right="160" Canvas.Bottom="30"/>
                        <Polygon x:Name="Star11" Points="0,-2 0.6,-0.6 2,0 0.6,0.6 0,2 -0.6,0.6 -2,0 -0.6,-0.6"
                            Fill="#D7ECE6" Opacity="0.7" Canvas.Right="250" Canvas.Bottom="65"/>
                        <Polygon x:Name="Star12" Points="0,-5 1.5,-1.5 5,0 1.5,1.5 0,5 -1.5,1.5 -5,0 -1.5,-1.5"
                            Fill="White" Opacity="0.5" Canvas.Right="280" Canvas.Bottom="80"/>


                        <!-- Bubbles -->
                        
                        <Ellipse x:Name="Bubble1" Width="12" Height="12" Fill="#1AFFFFFF" Canvas.Left="80" Canvas.Top="300"/>
                        <Ellipse x:Name="Bubble2" Width="16" Height="16" Fill="#1AFFFFFF" Canvas.Left="320" Canvas.Top="280"/>
                        <Ellipse x:Name="Bubble3" Width="10" Height="10" Fill="#1AFFFFFF" Canvas.Left="200" Canvas.Top="150"/>

                        <Ellipse x:Name="Bubble4" Width="12" Height="12" Fill="#1AFFFFFF" Canvas.Right="80" Canvas.Bottom="300"/>
                        <Ellipse x:Name="Bubble5" Width="16" Height="16" Fill="#1AFFFFFF" Canvas.Right="320" Canvas.Bottom="280"/>
                        <Ellipse x:Name="Bubble6" Width="10" Height="10" Fill="#1AFFFFFF" Canvas.Right="200" Canvas.Bottom="150"/>


                        <!-- Map lines -->
                        
                        <Path Stroke="#0DFFFFFF" StrokeThickness="1" Opacity="0.03" Data="M0,100 C200,50 600,150 800,100"/>
                        <Path Stroke="#0DFFFFFF" StrokeThickness="1" Opacity="0.03" Data="M0,250 C200,200 600,300 800,250"/>    

                        <!-- Animations -->
                        <Canvas.Triggers>
                            <EventTrigger RoutedEvent="Canvas.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">

                                        <DoubleAnimation Storyboard.TargetName="Blob1" Storyboard.TargetProperty="(Canvas.Left)"
                                            From="30" To="170" Duration="0:0:8" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob1" Storyboard.TargetProperty="(Canvas.Top)"
                                            From="80" To="190" Duration="0:0:8" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob2" Storyboard.TargetProperty="(Canvas.Left)"
                                            From="400" To="520" Duration="0:0:10" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob2" Storyboard.TargetProperty="(Canvas.Top)"
                                            From="100" To="160" Duration="0:0:10" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob3" Storyboard.TargetProperty="(Canvas.Left)"
                                            From="200" To="310" Duration="0:0:12" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob3" Storyboard.TargetProperty="(Canvas.Top)"
                                            From="250" To="140" Duration="0:0:12" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob4" Storyboard.TargetProperty="(Canvas.Left)"
                                            From="120" To="175" Duration="0:0:14" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob4" Storyboard.TargetProperty="(Canvas.Top)"
                                            From="20" To="65" Duration="0:0:14" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob5" Storyboard.TargetProperty="(Canvas.Right)"
                                            From="30" To="170" Duration="0:0:8" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob5" Storyboard.TargetProperty="(Canvas.Bottom)"
                                            From="80" To="190" Duration="0:0:8" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob6" Storyboard.TargetProperty="(Canvas.Right)"
                                            From="400" To="520" Duration="0:0:10" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob6" Storyboard.TargetProperty="(Canvas.Bottom)"
                                            From="100" To="160" Duration="0:0:10" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob7" Storyboard.TargetProperty="(Canvas.Right)"
                                            From="200" To="310" Duration="0:0:12" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob7" Storyboard.TargetProperty="(Canvas.Bottom)"
                                            From="250" To="140" Duration="0:0:12" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Blob8" Storyboard.TargetProperty="(Canvas.Right)"
                                            From="120" To="175" Duration="0:0:14" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Blob8" Storyboard.TargetProperty="(Canvas.Bottom)"
                                            From="20" To="65" Duration="0:0:14" AutoReverse="True"/>


                                        <DoubleAnimation Storyboard.TargetName="Star1" Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" Duration="0:0:5" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Star2" Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" Duration="0:0:6" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Star3" Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" Duration="0:0:7" AutoReverse="True"/>



                                        <DoubleAnimation Storyboard.TargetName="Bubble1" Storyboard.TargetProperty="(Canvas.Top)"
                                     From="200" To="250" Duration="0:0:12" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Bubble2" Storyboard.TargetProperty="(Canvas.Top)"
                                     From="180" To="230" Duration="0:0:14" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Bubble3" Storyboard.TargetProperty="(Canvas.Top)"
                                     From="150" To="20" Duration="0:0:10" AutoReverse="True"/>

                                        <DoubleAnimation Storyboard.TargetName="Bubble1" Storyboard.TargetProperty="(Canvas.Bottom)"
                                        From="200" To="250" Duration="0:0:12" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Bubble2" Storyboard.TargetProperty="(Canvas.Bottom)"
                                        From="180" To="230" Duration="0:0:14" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Bubble3" Storyboard.TargetProperty="(Canvas.Bottom)"
                                        From="150" To="20" Duration="0:0:10" AutoReverse="True"/>

                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Canvas.Triggers>

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
