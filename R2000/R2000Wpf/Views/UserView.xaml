<local:ViewBase 
    x:TypeArguments="vm:UserViewModel"
    x:Class="R2000Wpf.Views.UserView"
             xmlns:res="clr-namespace:R2000Wpf.Resources"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:R2000Wpf.Models"
             xmlns:controls="clr-namespace:R2000Wpf.Controls"
             xmlns:vm="clr-namespace:R2000Wpf.ViewModels" d:DataContext="{d:DesignInstance Type=vm:UserViewModel}"
    mc:Ignorable="d"   
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel >
            <Border Background="Red" Width="100" DockPanel.Dock="Left"/>
            <Border Background="Yellow" />
        </DockPanel>
        <DockPanel Grid.Row="1">
            <controls:UserOptionsControl x:Name="OptionsPanel" DockPanel.Dock="Left"  />
            <controls:ExplorerControl x:Name="ExplorerPanel" DockPanel.Dock="Left"/>
            <controls:CustomTabControl 
                CornerRadius="5" 
                BorderThickness="1" BorderBrush="#6CADE4"
                Background="#DFE8F6">
                <TabItem Width="50" Height="10">
                    <Grid Background="Pink">
                        <Border Background="Blue" Margin="20"
                    VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1">
                            <Button Command="{Binding BackCommand}" 
                Content="{Binding UserViewStrings.Back, Source={x:Static res:LocalizedStrings.Instance}}" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Height="30" Width="300" />
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Width="50" Height="10">
                    <Grid Background="Purple" />
                </TabItem>
            </controls:CustomTabControl>
        </DockPanel>
    </Grid>
</local:ViewBase>
