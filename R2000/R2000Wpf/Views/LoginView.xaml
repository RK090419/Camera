<local:ViewBase x:Class="R2000Wpf.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:R2000Wpf.Controls"
             xmlns:vm="clr-namespace:R2000Wpf.ViewModels"
             x:TypeArguments="vm:LoginViewModel"
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:R2000Wpf.Models"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="2" Name="NavigationGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.ColumnSpan="3" Grid.RowSpan="3" 
                    Height="{Binding Path=ActualHeight, ElementName=NavigationGrid}" 
                    Width="{Binding Path=ActualWidth, ElementName=NavigationGrid}"
                Style="{StaticResource LoginBackground}"/>
        <controls:Card Grid.Column="1" Grid.Row="1" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <controls:LoginControl LogInCommand="{Binding LogInCommand}"/>
        </controls:Card>
    </Grid>
</local:ViewBase>
